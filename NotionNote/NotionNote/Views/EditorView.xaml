<UserControl x:Class="NotionNote.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotionNote.Views"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Section -->
        <Border Grid.Row="0"  
            CornerRadius="8" 
            BorderThickness="1" 
            BorderBrush="{StaticResource BorderColor}"
            Margin="0,0,0,16" Height="63" VerticalAlignment="Bottom">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsEmpty}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel Orientation="Horizontal" Margin="8,4">
                <TextBlock Text="📝" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                     BorderThickness="0"
                     Background="Transparent"
                     FontSize="16"
                     FontWeight="SemiBold"
                     Margin="0">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                        Margin="{TemplateBinding Padding}"
                                                        VerticalAlignment="Center"/>
                                                <TextBlock Text="Untitled Page" 
                                                      Foreground="{StaticResource TextSecondaryColor}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      IsHitTestVisible="False">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>
        </Border>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsEmpty}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <Button Content="📌 Pin/Unpin" 
                Style="{StaticResource AnimatedButtonStyle}"
                Command="{Binding PinCommand}"
                ToolTip="Pin or unpin this page to keep it at the top"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                Margin="0,0,8,0"/>
            <!--<Button Content="🗑️ Delete Page" 
                Style="{StaticResource AnimatedButtonStyle}"
                Command="{Binding DeleteCommand}"
                ToolTip="Delete this page permanently"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                Margin="0,0,8,0"/>-->
            <Button Content="💾 Save" 
                Style="{StaticResource AnimatedButtonStyle}"
                Command="{Binding SaveCommand}"
                ToolTip="Save changes to this page"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                Margin="0,0,8,0"/>
        </StackPanel>

        <!-- Content Editor -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Border Background="{StaticResource BackgroundColor}" 
                CornerRadius="8" 
                BorderThickness="1" 
                BorderBrush="{StaticResource BorderColor}">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEmpty}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto"
                              Padding="0">
                    <TextBox AcceptsReturn="True" 
                         AcceptsTab="True"
                         Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Segoe UI"
                         FontSize="14"
                         Padding="20"
                         TextWrapping="Wrap"
                         MinHeight="300"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Stretch"/>
                </ScrollViewer>
            </Border>

            <!-- Empty State for Editor -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <TextBlock Text="📝" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,24" Opacity="0.3"/>
                <TextBlock Text="No page selected" Style="{StaticResource HeaderTextStyle}" HorizontalAlignment="Center" Opacity="0.6" Margin="0,0,0,8"/>
                <TextBlock Text="Select a page from the list to start editing" Style="{StaticResource BodyTextStyle}" HorizontalAlignment="Center" Opacity="0.6"/>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceColor}" 
            CornerRadius="6" 
            Padding="12,8">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsEmpty}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Border CornerRadius="4" 
                    Padding="6,2" 
                    Margin="0,0,12,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource WarningColor}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding IsDirty, StringFormat=Dirty: {0}}" 
                         Style="{StaticResource BodyTextStyle}"
                         Foreground="White"/>
                </Border>
                <TextBlock Text="{Binding LastSavedAt, StringFormat=Last saved: {0:HH:mm:ss}}" 
                     Style="{StaticResource BodyTextStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
