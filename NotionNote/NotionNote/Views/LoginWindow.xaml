<Window x:Class="NotionNote.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NotionNote - Login" 
        Height="700" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}">
    <Border Padding="40">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="48.709"/>
                <RowDefinition Height="13.215"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo/Icon -->
            <TextBlock Grid.Row="0" 
                       Text="📝" 
                       FontSize="64" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Title -->
            <TextBlock 
                       Text="{Binding ModeTitle}" 
                       Style="{StaticResource HeaderTextStyle}"
                       FontSize="24"
                       HorizontalAlignment="Center" 
                       Margin="0,105,0,17" Grid.RowSpan="2"/>

            <!-- Username -->
            <Border Grid.Row="2" 
                    Style="{StaticResource CardStyle}"
                    Padding="12"
                    Margin="0,13,0,12" Grid.RowSpan="2">
                <StackPanel>
                    <TextBlock Text="Username" 
                               Style="{StaticResource BodyTextStyle}" 
                               Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             FontSize="14"
                             Padding="8"/>
                </StackPanel>
            </Border>

            <!-- Password -->
            <Border Grid.Row="4" 
                    Style="{StaticResource CardStyle}"
                    Padding="12"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Password" 
                               Style="{StaticResource BodyTextStyle}" 
                               Margin="0,0,0,4"/>
                    <PasswordBox x:Name="PasswordBox"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 FontSize="14"
                                 Padding="8"
                                 Background="{StaticResource BackgroundColor}"
                                 Foreground="{StaticResource TextPrimaryColor}"
                                 BorderBrush="{StaticResource BorderColor}"
                                 BorderThickness="1"
                                 Height="36"/>
                </StackPanel>
            </Border>

            <!-- Error Message -->
            <Border Grid.Row="5" 
                    Background="#FEE2E2"
                    BorderBrush="#EF4444"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12"
                    Margin="0,0,0,20"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#DC2626"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="5" Margin="0,60,0,0" Grid.RowSpan="2">
                <!-- Login Button -->
                <Button Content="Login" 
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource AnimatedButtonStyle}"
                        FontSize="14"
                        Height="40"
                        Margin="0,0,0,12"
                        Visibility="{Binding IsLoginMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Register Button -->
                <Button Content="Create Account" 
                        Command="{Binding RegisterCommand}"
                        Style="{StaticResource AnimatedButtonStyle}"
                        FontSize="14"
                        Height="40"
                        Margin="0,0,0,12">
                    <Button.Visibility>
                        <Binding Path="IsLoginMode" Converter="{StaticResource BooleanToVisibilityConverter}">
                            <Binding.ConverterParameter>
                                <x:Static Member="Visibility.Collapsed"/>
                            </Binding.ConverterParameter>
                        </Binding>
                    </Button.Visibility>
                </Button>
            </StackPanel>

            <!-- Switch Mode -->
            <Button Grid.Row="6" 
                    Content="{Binding ModeSwitchText}"
                    Command="{Binding SwitchModeCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    HorizontalAlignment="Center"
                    Foreground="{StaticResource PrimaryColor}" Margin="0,104,0,0" Grid.RowSpan="3"/>
        </Grid>
    </Border>
</Window>