<UserControl x:Class="NotionNote.Views.UserProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:NotionNote.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <!-- Header -->
            <TextBlock Text="Chỉnh sửa thông tin người dùng" 
                      Style="{StaticResource HeaderTextStyle}"
                      Margin="0,0,0,16"/>

            <!-- Username Display -->
            <TextBlock Text="Tên đăng nhập:" 
                      Style="{StaticResource SubHeaderTextStyle}"
                      Margin="0,0,0,4"/>
            <Border Background="{StaticResource SurfaceColor}"
                    CornerRadius="6"
                    Padding="12,8"
                    Margin="0,0,0,16">
                <TextBlock Text="{Binding Username}" 
                          Style="{StaticResource BodyTextStyle}"/>
            </Border>

            <!-- Old Password -->
            <TextBlock Text="Mật khẩu cũ:" 
                      Style="{StaticResource SubHeaderTextStyle}"
                      Margin="0,0,0,4"/>
            <PasswordBox x:Name="OldPasswordBox"
                        PasswordChanged="PasswordBox_PasswordChanged"
                        Style="{StaticResource ModernPasswordBoxStyle}"
                        Margin="0,0,0,16"/>

            <!-- New Password -->
            <TextBlock Text="Mật khẩu mới:" 
                      Style="{StaticResource SubHeaderTextStyle}"
                      Margin="0,0,0,4"/>
            <PasswordBox x:Name="NewPasswordBox"
                        PasswordChanged="PasswordBox_PasswordChanged"
                        Style="{StaticResource ModernPasswordBoxStyle}"
                        Margin="0,0,0,16"/>

            <!-- Confirm Password -->
            <TextBlock Text="Xác nhận mật khẩu mới:" 
                      Style="{StaticResource SubHeaderTextStyle}"
                      Margin="0,0,0,4"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                        PasswordChanged="PasswordBox_PasswordChanged"
                        Style="{StaticResource ModernPasswordBoxStyle}"
                        Margin="0,0,0,16"/>

            <!-- Error Message -->
            <Border Visibility="{Binding ErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Background="#FFF5F5"
                    BorderBrush="{StaticResource ErrorColor}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12,8"
                    Margin="0,0,0,8">
                <TextBlock Text="{Binding ErrorMessage}"
                          Foreground="{StaticResource ErrorColor}"
                          TextWrapping="Wrap"/>
            </Border>

            <!-- Success Message -->
            <Border Visibility="{Binding SuccessMessage, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Background="#F0FDF4"
                    BorderBrush="{StaticResource SuccessColor}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12,8"
                    Margin="0,0,0,8">
                <TextBlock Text="{Binding SuccessMessage}"
                          Foreground="{StaticResource SuccessColor}"
                          TextWrapping="Wrap"/>
            </Border>

            <!-- Change Password Button -->
            <Button Content="Đổi mật khẩu"
                    Command="{Binding ChangePasswordCommand}"
                    Style="{StaticResource AnimatedButtonStyle}"
                    HorizontalAlignment="Stretch"
                    Margin="0,8,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>

