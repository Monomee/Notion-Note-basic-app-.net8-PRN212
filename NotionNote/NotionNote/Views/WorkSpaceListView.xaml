<UserControl x:Class="NotionNote.Views.WorkSpaceListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotionNote.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Workspaces" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="Manage your workspaces" Style="{StaticResource BodyTextStyle}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Search Box -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceColor}" 
            CornerRadius="8" 
            BorderThickness="1" 
            BorderBrush="{StaticResource BorderColor}"
            Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" Margin="8,4">
                <TextBlock Text="🔍" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     BorderThickness="0"
                     Background="Transparent"
                     Margin="0">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                        Margin="{TemplateBinding Padding}"
                                                        VerticalAlignment="Center"/>
                                                <TextBlock Text="Search workspaces..." 
                                                      Foreground="{StaticResource TextSecondaryColor}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      IsHitTestVisible="False">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>
        </Border>

        <!-- Workspace List -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <ListBox ItemsSource="{Binding FilteredWorkspaces}"
                 SelectedItem="{Binding Selected, Mode=TwoWay}"
                 MouseDoubleClick="ListBox_MouseDoubleClick">
                <ListBox.Style>
                    <Style TargetType="ListBox" BasedOn="{StaticResource ModernListBoxStyle}">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEmpty}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.Style>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource ModernListBoxItemStyle}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Bd" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    Margin="0,1"
                                    Padding="12,10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📁" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>

                                            <!-- Display TextBlock -->
                                            <TextBlock x:Name="NameTextBlock" 
                                             Text="{Binding Name}" 
                                             VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource SubHeaderTextStyle}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Edit TextBox -->
                                            <TextBox x:Name="NameTextBox" 
                                           Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                           BorderThickness="0"
                                           Background="Transparent"
                                           VerticalAlignment="Center"
                                           Padding="0"
                                           FontFamily="Segoe UI"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimaryColor}"
                                           LostFocus="TextBox_LostFocus"
                                           KeyDown="TextBox_KeyDown">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverColor}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource SelectedColor}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <!-- Empty State -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="📁" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16" Opacity="0.3"/>
                <TextBlock Text="No workspaces found" Style="{StaticResource SubHeaderTextStyle}" HorizontalAlignment="Center" Opacity="0.6"/>
                <TextBlock Text="Create your first workspace to get started" Style="{StaticResource BodyTextStyle}" HorizontalAlignment="Center" Margin="0,4,0,0" Opacity="0.6"/>
            </StackPanel>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Content="+ Add Workspace" 
                Style="{StaticResource AnimatedButtonStyle}"
                Command="{Binding AddWorkspaceCommand}"
                Margin="0,0,8,0"
                HorizontalAlignment="Stretch"/>
            <Button Content="🗑️ Delete" 
                Style="{StaticResource AnimatedButtonStyle}"
                Command="{Binding DeleteWorkspaceCommand}"
                HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</UserControl>
