                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}"
                                              Style="{StaticResource SubHeaderTextStyle}"
                                              Margin="0,0,0,4"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Type}"
                                                  Style="{StaticResource BodyTextStyle}"
                                                  Opacity="0.7"
                                                  Margin="0,0,8,0"/>
                                        <TextBlock Text="â€¢"
