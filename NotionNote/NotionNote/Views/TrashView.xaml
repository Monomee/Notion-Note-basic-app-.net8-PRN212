                                </Grid.ColumnDefinitions>

                                <!-- Type Icon -->
                                <TextBlock Grid.Column="0"
                                          FontSize="24"
                                          Margin="0,0,12,0"
                                          VerticalAlignment="Center">
                                    <TextBlock.Style>
