<UserControl x:Class="NotionNote.Views.SidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:NotionNote.Views"
             xmlns:converters="clr-namespace:NotionNote.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Toggle Button (Always visible) -->
        <Button Grid.Column="0"
                Command="{Binding ToggleSidebarCommand}"
                Style="{StaticResource IconButtonStyle}"
                Width="40"
                Height="40"
                VerticalAlignment="Top"
                Margin="8,8,0,0">
            <TextBlock>
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Text" Value="â˜°"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                <Setter Property="Text" Value="âœ•"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Button>

        <!-- Sidebar Content (Expandable) -->
        <Border Grid.Column="1"
                Background="{StaticResource SurfaceColor}"
                BorderThickness="0,0,1,0"
                BorderBrush="{StaticResource BorderColor}"
                Width="{Binding IsExpanded, Converter={StaticResource SidebarWidthConverter}}"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Margin="0,0,0,0">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- User Info -->
                <Border Grid.Row="0"
                        Background="{StaticResource PrimaryColor}"
                        Padding="16,12"
                        Margin="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¤" FontSize="24" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding Username}" 
                                   Style="{StaticResource SubHeaderTextStyle}"
                                   Foreground="White"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <!-- Menu Items -->
                <StackPanel Grid.Row="1" Margin="8,8,8,0">
                    <Button Content="ðŸ  Home"
                            Command="{Binding ShowMainCommand}"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,8"
                            Padding="12,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentContent}" Value="None">
                                        <Setter Property="Background" Value="{StaticResource SelectedColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="âš™ï¸ Settings"
                            Command="{Binding ShowSettingsCommand}"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,8"
                            Padding="12,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentContent}" Value="Settings">
                                        <Setter Property="Background" Value="{StaticResource SelectedColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ðŸ‘¤ Edit Profile"
                            Command="{Binding ShowUserProfileCommand}"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,8"
                            Padding="12,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentContent}" Value="UserProfile">
                                        <Setter Property="Background" Value="{StaticResource SelectedColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ðŸ·ï¸ Manage Tags"
                            Command="{Binding ShowTagManagementCommand}"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,8"
                            Padding="12,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentContent}" Value="TagManagement">
                                        <Setter Property="Background" Value="{StaticResource SelectedColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ðŸ—‘ï¸ Trash"
                            Command="{Binding ShowTrashCommand}"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,8"
                            Padding="12,10">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentContent}" Value="Trash">
                                        <Setter Property="Background" Value="{StaticResource SelectedColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Empty State (Sidebar chá»‰ hiá»ƒn thá»‹ menu, khÃ´ng hiá»ƒn thá»‹ content) -->
                <Border Grid.Row="2"
                        Background="{StaticResource BackgroundColor}"
                        Margin="8,0,8,8"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="{StaticResource BorderColor}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“‹" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                        <TextBlock Text="Select an item from the menu to view" 
                                  Style="{StaticResource BodyTextStyle}" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,8,0,0"
                                  Opacity="0.6"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Logout Button at bottom -->
                <Border Grid.Row="3"
                        Background="{StaticResource BackgroundColor}"
                        BorderThickness="0,1,0,0"
                        BorderBrush="{StaticResource BorderColor}"
                        Padding="8">
                    <Button Content="ðŸšª Log out" 
                            Command="{Binding LogoutCommand}"
                            Style="{StaticResource AnimatedButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Padding="12,10"
                            FontSize="12"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>

